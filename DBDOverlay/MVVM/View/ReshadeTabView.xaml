<UserControl x:Class="DBDOverlay.MVVM.View.ReshadeTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBDOverlay.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500"
             Background="{DynamicResource DarkestGrayBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.84*"/>
            <RowDefinition Height="0.16*"/>
        </Grid.RowDefinitions>

        <ScrollViewer>
            <Grid x:Name="MapFiltersGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                </Grid.RowDefinitions>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Bottom">
            <Button x:Name="OpenButton"
                    Style="{StaticResource ButtonStyle}"
                    Content="Open"
                    FontSize="16"
                    Foreground="White"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left"
                    Width="70"
                    Height="35"
                    Margin="10"
                    Click="Open_Click"/>

            <Label Content="ReShade.ini"
                   Foreground="White"
                   FontSize="14"
                   VerticalAlignment="Center"/>
        </StackPanel>

        <Button Grid.Row="2"
                x:Name="ResetButton"
                Style="{StaticResource ButtonStyle}"
                Content="Reset"
                FontSize="16"
                Foreground="White"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Width="70"
                Height="35"
                Margin="10"
                Click="Reset_Click"/>
    </Grid>

</UserControl>
