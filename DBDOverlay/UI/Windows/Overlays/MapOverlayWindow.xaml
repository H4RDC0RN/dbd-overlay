<Window x:Class="DBDOverlay.UI.Windows.Overlays.MapOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBDOverlay"
        mc:Ignorable="d"
        Title="Map Overlay"
        MouseLeftButtonDown="OverlayMouseDown"
        MouseLeftButtonUp="OverlayMouseUp"
        Cursor="Hand"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="10"/>
    </WindowChrome.WindowChrome>

    <Grid x:Name="MapOverlayGrid">
        <Border>
            <Border.Background>
                <ImageBrush x:Name="ImageBrush" Stretch="Fill"/>
            </Border.Background>
        </Border>
    </Grid>
</Window>
