<Window x:Class="DBDUtilityOverlay.DownloadLanguage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBDUtilityOverlay"
        mc:Ignorable="d"
        Title="DownloadLanguage" Height="100" Width="200"
        MouseLeftButtonDown="WindowMouseDown">
    <Grid>
        <ComboBox x:Name="LanguageComboBox" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="LanguageComboBox_SelectionChanged"/>
        <Button x:Name="Download" Content="Download" HorizontalAlignment="Center" Margin="0,53,0,0" VerticalAlignment="Top" Width="84" Click="Download_Click"/>
        <Button x:Name="Exit" HorizontalAlignment="Right" Width="20" Height="20" Click="ExitButtonClick" Margin="0,0,0,64">
            <Button.Background>
                <ImageBrush ImageSource="/Images/App/close.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
