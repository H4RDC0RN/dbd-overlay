<UserControl x:Class="DBDUtilityOverlay.MVVM.View.MapOverlayTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBDUtilityOverlay.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500"
             Background="#101517">

    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Map Overlay"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
            
            <TextBlock Grid.Row="1" 
                       Text="Change Position"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>

            <TextBlock Grid.Row="2" 
                       Text="Opacity"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>

            <ToggleButton x:Name="OpenCloseToggleButton"
                          Grid.Column="1"
                          Grid.Row="0"
                          HorizontalAlignment="Center"
                          Margin="5"
                          Style="{StaticResource ToggleButtonStyle}"
                          Checked="OpenClose_Checked"
                          Unchecked="OpenClose_Unchecked"/>

            <ToggleButton x:Name="MoveToggleButton"
                          Grid.Column="1"
                          Grid.Row="1"
                          IsChecked="False"
                          HorizontalAlignment="Center"
                          Margin="5"
                          Style="{StaticResource ToggleButtonStyle}"
                          Checked="Move_Checked"
                          Unchecked="Move_Unchecked"
                          ToolTipService.InitialShowDelay="200"
                          ToolTip="- Turn on&#x0a;- Drag map&#x0a;- Turn off"/>

                <Border Grid.Column="1"
                        Grid.Row="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        CornerRadius="10"
                        Margin="10,10,10,10">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#ffc554" Offset="0.0"/>
                        <GradientStop Color="#ffb73a" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel Orientation="Horizontal">
                    <Slider x:Name="OpacitySlider" 
                            VerticalAlignment="Center" 
                            Margin="30,0,0,0" 
                            Width="135" 
                            ValueChanged="Slider_ValueChanged" 
                            Maximum="100" 
                            Value="90" 
                            IsSnapToTickEnabled="True"/>
                    <TextBox Margin="10,0,0,0" 
                             TextWrapping="Wrap" 
                             Text="{Binding ElementName=OpacitySlider, 
                                            Path=Value, 
                                            UpdateSourceTrigger=PropertyChanged}" 
                             VerticalAlignment="Center" 
                             Width="20" 
                             Height="20"/>
                    <Label Content="%" 
                           Margin="0,0,0,0"  
                           VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </StackPanel>
</UserControl>
