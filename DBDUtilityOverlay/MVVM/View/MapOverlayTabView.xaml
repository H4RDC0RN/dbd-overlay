<UserControl x:Class="DBDUtilityOverlay.MVVM.View.MapOverlayTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DBDUtilityOverlay.MVVM.View" 
             xmlns:custom="clr-namespace:DBDUtilityOverlay.Core.CustomItems"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500"
             Background="{DynamicResource DarkestGrayBrush}">

    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.44*"/>
                <ColumnDefinition Width="0.56*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Map overlay"
                       Style="{StaticResource TextBlockStyle}"/>

            <TextBlock Grid.Row="1" 
                       Text="Change position"
                       Style="{StaticResource TextBlockStyle}"/>

            <TextBlock Grid.Row="2" 
                       Text="Opacity"
                       Style="{StaticResource TextBlockStyle}"/>

            <custom:CustomToggleButton x:Name="OpenCloseToggleButton"
                          Grid.Row="0"
                          Grid.Column="1"
                          HorizontalAlignment="Center"
                          Margin="5"
                          Style="{StaticResource ToggleButtonStyle}"
                          Checked="OpenClose_Checked"
                          Unchecked="OpenClose_Unchecked"/>

            <custom:CustomToggleButton x:Name="MoveToggleButton"
                          Grid.Column="1"
                          Grid.Row="1"
                          IsChecked="False"
                          HorizontalAlignment="Center"
                          Margin="5"
                          Style="{StaticResource ToggleButtonStyle}"
                          Checked="Move_Checked"
                          Unchecked="Move_Unchecked">
                <custom:CustomToggleButton.ToolTip>
                    <ToolTip Style="{StaticResource ToolTipStyle}">
                        <StackPanel>
                            <TextBlock FontWeight="Bold">To change position:</TextBlock>
                            <TextBlock>- Turn on</TextBlock>
                            <TextBlock>- Drag map overlay</TextBlock>
                            <TextBlock>- Turn off</TextBlock>
                        </StackPanel>
                    </ToolTip>
                </custom:CustomToggleButton.ToolTip>
            </custom:CustomToggleButton>

            <StackPanel Grid.Column="1"
                        Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Slider x:Name="OpacitySlider" 
                            VerticalAlignment="Center" 
                            Margin="20,0,0,0" 
                            Width="140" 
                            ValueChanged="Slider_ValueChanged" 
                            Maximum="100"
                            IsSnapToTickEnabled="True"
                            Style="{StaticResource Horizontal_Slider}"/>
                <TextBox x:Name="OpacityTextBox" 
                             Text="{Binding ElementName=OpacitySlider, 
                                            Path=Value, 
                                            UpdateSourceTrigger=PropertyChanged}" 
                             VerticalAlignment="Center"
                             Width="34" 
                             Height="30"
                             Margin="10,0,0,3"
                             FontSize="20"
                             TextAlignment="Center"
                             Style="{StaticResource TextBoxInputStyle}"/>
                <Label Content="%"
                           Foreground="White"
                           FontSize="20"
                           Margin="0,0,0,3"  
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
